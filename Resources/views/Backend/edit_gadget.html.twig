{% set topic_path = { 'Page' : path("_backend_page"), 'Edit Gadget' : none } %}
{% set title = "Edit Gadget" %}

{% extends app.request.xmlHttpRequest ? skin_template_path('ajax_content.html.twig') : skin_template_path('admin_base.html.twig') %}

{% block body %}
<p><a href="{{ path('_backend_page_delete_gadget', {'id': gadget.id }) }}">delete</a></p>

<p>Please fill the following gadget configuration what you want to create:</p>
{% if (app.request.xmlHttpRequest) %}
<p><a href="{{ path('_backend_page_edit_gadget', {'id' : gadget.id }) }}">[Edit in full-sized window]</a></p>
{% endif %}

<div class="gadget_info">
    <div class="title">{{ gadget_info.caption }}</div>
    <div class="description">{{ gadget_info.description }}</div>
</div>

<form action="{{ path('_backend_page_edit_gadget', {'id': gadget.id }) }}" method="post">
    {{ form_widget(form) }}
    <input type="submit" />
</form>
{% endblock %}
